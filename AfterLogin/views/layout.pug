doctype html
html
    head
        title= title
    
        link(rel="stylesheet", href="styles/main.css")
            
        link(rel="stylesheet",
            href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css")
            
        link(rel="stylesheet",
            href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css")
        
        <link href='https://fonts.googleapis.com/css?family=Gruppo' rel='stylesheet' type='text/css'>
        
        script(type="text/javascript" src="https://code.jquery.com/jquery-3.0.0.min.js")
        
        script(type="text/javascript" src="widget.js")

    body
        div(class="container-fluid")
            div(id="weather" class="container col-md-12 col-lg-12 col-xs-12")
            
        div(class="container-fluid")
                div(id="listCont" class="col-md-5 col-xs-5 col-lg-5")
                    table(id="todoContent" class="table table-striped table-hover")
                        tr
                            th Scheduled
                            th Completed
    
                        each task,index in tasks
                            tr
                                td= task
                                td
                                    form(action="/deleteTask" method="post" class="form-inline")
                                            input(type="hidden" name="task" value=task)
                                            input(type="checkbox" name="completed")
                                            
                        tr
                            td
                                input(id="addBtn" type="button" name="add" action="/addTask" value="+")
                            td
                                form(action="/addTask" method="post")
                                    input( id="addToList" class="col-md-12 col-xs-12 col-lg-12" name="addToList" type="text" placeholder="The list never stops growing ay..")
                                    
                div(id="chart" class="col-md-7 col-xs-7 col-lg-7")
                
        div(class="container-fluid")
            div(id="blogCont" class="col-md-12 col-xs-12 col-lg-12")
                    table(id="blogData" class="table table-striped table-hover")
                            each entry in entryData
                                tr
                                    td= entry.entryDate
                                    td(class="blogCell")= entry.blogEntry
                            tr
                    form(action="/addBlog" method="post")
                        input( id="addToBlog" class="col-md-12 col-xs-12 col-lg-12" name="addToBlog" type="text" placeholder="What Happened Today?")       
